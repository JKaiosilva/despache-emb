<div class="countainer">
    <div class="card">
        <div class="card-body">
            <h3>Comboio</h3>
                <form class="row gx-3 gy-2 align-items-center" action="comboios" method="POST">
                    <input type="hidden" name="usuarioID" value="%= req.user._id %">
                        <div class="input-group mb-3">
                            <label class="input-group-text">Nome do Comboio</label>
                            <input name="comboioNome" value="{{comboios.comboioNome}}" class="form-control" type="text" disabled>
                        </div>
                        <div>
                            <h5>Embarcaçoes</h5>
                            <br>
                                <div id="selecaoComboio">
                                    <div class="container">
                                        <div>
                                            <div class="card">
                                                <div class="card-body">
                                                        {{#each embarcacoes}}
                                                            <label class="input-group-text">carga</label>
                                                            <input value="{{comboiosCarga}}" class="form-control" type="text">
                                                            <label class="input-group-text">quantidade e unidade de carga</label>
                                                            <input value="{{comboiosQuantidadeCarga}}" class="form-control" type="text">
                                                            <label class="input-group-text">Arqueaçao Bruta</label>
                                                            <input value="{{comboiosarqueacaoBruta}}" class="form-control" type="text">
                                                        {{/each}}                            

                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <button type="submit" id="submitButton" class="btn btn-success" disabled>Enviar</button>
                </form>
        </div>
    </div>
</div>
