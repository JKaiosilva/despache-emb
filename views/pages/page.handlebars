<div class="card">
  <div class="card-body">

    <h1>Avisos: </h1>
    <hr>

    {{#each avisos}}
      <div class="card mt-4" >
        <img src="data:{{contentType}};base64,{{data}}" style="width: 10rem;">
        <div class="card-body">
          <h4 class="card-title">{{titulo}}</h4>
          <h6>{{descricao}}</h6>
          <p class="card-text">{{conteudo}}</p>
          <hr>
          <h4>{{avisoData}}</h4>
        </div>
      </div>
    {{else}}
      <h5>Nenhum aviso postado</h5>
    {{/each}}
  </div>
</div>
<br>
<a href="{{previousPage}}" class="btn btn-primary" type="{{hidden}}">Anterior</a>
<a href="{{nextPage}}" class="btn btn-primary" style="float: right">Proximo</a>
