
<div class="card">
    <div class="card-body">
        <form action="/admin/users/usuarioEdit" method="POST">
            <input name="id" value="{{usuario._id}}" hidden>
            <label for="nome"> Nome </label>
                <input name="nome" type="text" value="{{usuario.nome}}" class="form-control">
            <label for="email">Email: </label>
                <input name="email" type="email" value="{{usuario.email}}" class="form-control">
            <label  type="CPF">CPF/CNPJ: </label>
                <input name="CPF" type="number" value="{{usuario.CPF}}" class="form-control">
            <br>
            <label type="radio" >Conta Admin</label>
                <input id="contaAdmin" name="eAdmin" type="range" value="{{usuario.eAdmin}}" min="0" max="1" onchange="mostrarCampo('contaAdmin', 'infosAdmin')">
            <br>
            <label  type="radio">Conta Agencia</label>
                <input id="contaAgencia" name="eAgencia" type="range" value="{{usuario.eAgencia}}" min="0" max="1" onchange="mostrarCampo('contaAgencia', 'infosAgencia')">
            <br>
            <label  type="radio">Conta Despachante</label>
                <input id="contaUser" name="eUser" type="range" value="{{usuario.eUser}}" min="0" max="1" onchange="mostrarCampo('contaUser', 'infosUser')">
            <br>
            <br>
                <div id="infosAdmin" hidden>
                    <span>Informações Necessárias para conta Administrativa</span>
                        <div class="input-group">
                            <label class="input-group-text">Organização Militar</label>
                            <input class="form-control" value="">
                        </div>
                        <br>
                </div>
                <div id="infosAgencia" hidden>
                    <span>Informações Necessárias para conta de Agencia</span>
                        <div class="input-group">
                            <label class="input-group-text">Proprietário</label>
                            <input class="form-control" name="proprietario" value="{{usuario.proprietario}}">
                        </div>
                        <br>
                        <div class="input-group">
                            <label class="input-group-text">Sócios Proprietários</label>
                            <input class="form-control" name="sociosProprietarios" value="{{usuario.sociosProprietarios}}">
                        </div>
                        <br>
                </div>
                <div id="infosUser" hidden>
                    <span>Informações Necessárias para conta de Despachante</span>
                        <div class="input-group">
                            <label class="input-group-text">Período de contrato</label>
                            <input name="periodoContrato" class="form-control" type="date" value="{{usuario.periodoContrato}}">
                        </div>
                        <br>
                        <div class="input-group">
                            <label class="input-group-text">Agencia</label>
                        <select name="agencia" class="form-select" >
                            <option value="{{usuario.agencia}}">Já Selecionado:</option>
                            {{#each agencias}}
                            <option value="{{_id}}">
                                {{nome}}
                            </option>
                            {{/each}}
                            <option value="">Em Branco</option>
                        </select>
                        </div>
                        <br>
                </div>
            <label for="senha">Senha:</label>
                <input name="senha" type="password" class="form-control">
            <button type="submit" class="btn btn-success mt-4">Editar</button>
        </form>
    </div>
</div>
    <br>
<input class="btn btn-success" type="button" value="Voltar" style="float: left" onClick="history.go(-1)"> 

<script>
    function mostrarCampo(campo, div){
        const infoCampo = document.getElementById(campo)
        const infoDiv = document.getElementById(div)
        if(infoCampo.value == 1){
            infoDiv.hidden = false
        }else{
            infoDiv.hidden = true
        }
    }
</script>