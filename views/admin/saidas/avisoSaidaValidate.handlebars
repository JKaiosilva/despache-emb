                            <input name="saidaNInscricaoAutoridadeMaritima" class="form-control" type="text" value="{{embarcacaoValid.embarcacaoNInscricaoautoridadeMB}}" disabled>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text">Arqueação Buta</label>
                            <input name="saidaArqueacaoBruta" class="form-control" type="text" value="{{embarcacaoValid.embarcacaoArqueacaoBruta}}" disabled>
                            <label class="input-group-text">Tonelagem Porte Bruto</label>
                            <input name="saidaTonelagemPorteBruto" class="form-control" type="text" value="{{embarcacaoValid.embarcacaoTonelagemPorteBruto}}" disabled>
                        </div>
                </div>
                <div class="input-group">
                    <label  class="input-group-text">Redefinir Embarcação</label>
                    <select name="embarcacao" class="form-select">
