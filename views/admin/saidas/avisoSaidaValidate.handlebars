                            </select>
                        <div id="campo1" hidden>
                            <label class="input-group-text">Adicione outro porto de Destino</label>
                            <input value="{{portoSaida.portoNome}}" name="saidaOutroPortoSaida" class="form-control" type="text">
                        </div>
