<br>
<h4 class="text-center">Painel Administrativo</h4>
<br>
{{#each usuariosOperador}}
    <div class="input-group" style="width: 30rem">
        <label class="input-group-text">Operador</label>
        <input class="form-control" value="{{nome}}" disabled>
    </div>
{{else}}
<span>Operador: Erro interno ao mostrar operador</span>
{{/each}}
<hr>

<div class="container-fluid">
    <div class="row">
        <div class="row justify-content-around">
            <div class="card mt-4" style="max-width: 15rem">
                <a href="/admin/avisos" style="text-decoration:none">
                    <div class="cad-body text-center" style="max-width: 15rem; padding: 3rem">
                        <img src="/img/alto-falante.svg" class="img-fluid rounded-center"  alt="...">
                        <h6 class="mt-4">Avisos</h6>
                    </div>
                </a>
                <div class="card-footer text-center bg-light">
                    <label>{{avisos}} Avisos Postados</label>
                </div>
            </div>

            <div class="card mt-4" style="max-width: 15rem">
                <a href="/admin/listaUsers" style="text-decoration:none">
                    <div class="cad-body text-center" style="max-width: 15rem; padding: 3rem">
                        <img src="/img/user.svg" class="img-fluid rounded-center"  alt="...">
                        <h6 class="mt-4">Usuarios</h6>
                    </div>
                </a>
                <div class="card-footer text-center bg-light">
                    <label>{{usuarios}} Usuários cadastrados</label>
                </div>
            </div>


            <div class="card mt-4" style="max-width: 15rem">
                <a href="/admin/listaEmbarcacoes" style="text-decoration:none">
                    <div class="cad-body text-center" style="max-width: 15rem; padding: 3rem">
                        <img src="/img/ship.png" class="img-fluid rounded-center"  alt="...">
                        <h6 class="mt-4">Embarcações</h6>
                    </div>
                </a>
                <div class="card-footer text-center bg-light">
                    <label>{{embarcacoes}} Embarcações cadastrados</label>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="row justify-content-around">
            <div class="card mt-4" style="max-width: 15rem">
                <a href="/admin/listaDespacho" style="text-decoration:none">
                    <div class="cad-body text-center" style="max-width: 15rem; padding: 3rem">
                        <img src="/img/despacho.svg" class="img-fluid rounded-center"  alt="...">
                        <h6 class="mt-4">Despachos</h6>
                    </div>
                </a>
                <div class="card-footer text-center bg-light">
                    <label>{{despachos}} Despachos solicitados</label>
                </div>
            </div>


            <div class="card mt-4" style="max-width: 15rem">
                <a href="/admin/listaAvisoEntrada" style="text-decoration:none">
                    <div class="cad-body text-center" style="max-width: 15rem; padding: 3rem">
                        <img src="/img/docEntrada.svg" class="img-fluid rounded-center"  alt="...">
                        <h6 class="mt-4">Avisos Entrada</h6>
                    </div>
                </a>
                <div class="card-footer text-center bg-light">
                    <label>{{avisoEntradas}} Entradas solicitadas</label>
                </div>
            </div>


            <div class="card mt-4" style="max-width: 15rem">
                <a href="/admin/listaAvisoSaida" style="text-decoration:none">
                    <div class="cad-body text-center" style="max-width: 15rem; padding: 3rem">
                        <img src="/img/docSaida.svg" class="img-fluid rounded-center"  alt="...">
                        <h6 class="mt-4">Avisos Saída</h6>
                    </div>
                </a>
                <div class="card-footer text-center bg-light">
                    <label>{{avisoSaidas}} Saídas solicitadas</label>
                </div>
            </div>
        </div>
    </div>
</div>










